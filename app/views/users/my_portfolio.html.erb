<!-- 1: Below form classes are from twitter-bootstrap -->
<h1 align = "center">My Portfolio</h1>
<h3>Search for stocks</h3>

<div id = "stock-lookup">
    <%= form_tag(search_stock_path(), method: :get, remote: true,
        id: "stock-lookup-form") do %>
        <!-- 2: "remote: true" for AJAX xhr request instead of HTTP
        request and load the entire page -->
        <div class = "row form-group no-padding text-center 
        col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class = "col-xs-10 col-sm-10 col-md-10 col-lg-10">
                <%= text_field_tag(:stock, params[:stock], placeholder:
                "Stock ticker symbol", autofocus: true, class: "form-control search-box
                input-lg") %>
            </div>

            <div class = "col-xs-2 col-sm-2 col-md-2 col-lg-2">
                <%= button_tag(type: :submit, class: "btn btn-lg 
                btn-success") do %>
                    <i class = "fa fa-search"></i> Look up a stock
                <% end %>
            </div>
        </div> 
    <% end %>
</div>

<!-- 3: Sepertae div for ajax handling -->
<div id = "result">
    <%= render("users/result") %>
</div>

<!-- 3: For listing all the user stocks -->
<%= render("stocks/list") %>